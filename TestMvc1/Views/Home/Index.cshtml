@using System.Linq
@model Customer2


@{
    ViewData["Title"] = "Home Page";
}


    <div class="text-center">
        <h1 class="display-4">Welcome</h1>

        <h2>Customers</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customers.First().Location)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Customers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <p>Server URL: @Model.ApiServerUrl</p>
        <p>Hosting Environment: @Model.HostingEnvironment</p>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>